<% @messages.each do |message| %>
  <div class="col-md-10 col-md-offset-1">
    <div class="message">
      <h2 class="message-title">
        <h1><%= message.title %></h1>
        <%= link_to 'Join Conversation' , message, class: 'btn-custom' %>
        <%= link_to 'New Message' , new_message_path %>
      </h2>
    </div>
  </div>
<% end %>


